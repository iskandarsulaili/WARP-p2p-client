# Ragnarok Online Client Resource Configuration
# P2P Coordinator Endpoints

[CONNECTION]
# Main server connection settings
ServerIP=127.0.0.1
ServerPort=6900

[P2P_HOSTS]
# Primary P2P coordinator (development)
# WebSocket endpoint for signaling
0=ws://localhost:8001/api/signaling/ws

# Production P2P coordinator (update when deployed)
# Use WSS (WebSocket Secure) for production
# 0=wss://coordinator.yourdomain.com/api/signaling/ws

# Backup coordinator (optional)
# Provides redundancy if primary coordinator fails
# 1=wss://backup-coordinator.yourdomain.com/api/signaling/ws

# Additional backup coordinators can be added
# 2=wss://coordinator-us-east.yourdomain.com/api/signaling/ws
# 3=wss://coordinator-eu-west.yourdomain.com/api/signaling/ws

[P2P_ZONES]
# Zones enabled for P2P hosting
# Format: zone_name=enabled
prontera=1
geffen=1
payon=1
morocc=1
alberta=1
izlude=1

# Disable P2P for critical zones
guild_vs1=0
guild_vs2=0
pvp_y_room=0

